<%- include("partials/header.ejs") %>
<% if (Item !== '') { %>
    <% Item.forEach(element => { %>     
        <div class="mx-5 px-5 pt-4 d-flex flex-wrap">
        <nav aria-label="breadcrumb">
        <ol class="breadcrumb mx-3">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- element.name %></li>
        </ol>   
        </nav>
        </div>

        <div class="row col-md-11 mx-5 px-5">
            <div class="col-12 col-md-4">
              <img src="\images\<%- element.image %>" class="img-fluid" style="top: 20px;" alt="<%- element.name %>" loading="lazy">
            </div>
        
            <div class="col-12 col-md-8">
              <div class="row">
                <div class="col-12"><h1 class="fs-1 fw-bold"><%- element.name %></h1></div>
                <div class="col-12 mb-4 fs-4"><%- element.category %><i class="mx-2 fa-solid fa-tag"></i></div>
                <div class="col-12 fs-5" style="white-space: pre-line;">
                  <h4 class="fs-2">Cooking Instructions</h4>
                  <%- element.description %>
                </div>
                <div class="col-12 pt-4 fs-5"><h5>Source</h5><%- element.source %></div>
              </div>
        
              <div class="row pt-5 py-3">
                <div class="col-12">
                  <h4 class="fs-2">Ingredients</h4>
                  <ul class="list-group list-group-flush">
                    <% element.ingredients.forEach(ingredient => { %>
                      <li class="list-group-item fs-5"><%= ingredient %></li>
                    <% }) %>
                  </ul> 
                </div>
              </div>
            </div>

            <div class="d-flex justify-content-md-center">
              <div class="px-2 py-3">
            <form class="edit" action="/edit" method="post">
            <a href="/edit/<%- element.id %>"><button type="button" class="btn btn-outline-dark btn-lg px-4 me-md-2">Update</button></a>
            </form>
              </div>
                  <div class="px-2 py-3">
                    <form class="delete" action="/delete" method="post">
                    <a href="/delete/<%- element.id %>"><button type="button" class="btn btn-outline-dark btn-lg px-4 me-md-2">Delete</button></a>                   </form>
                  </div>
             </div>
        </div>
<% }) %> 
<% } %>
</body>
</html>